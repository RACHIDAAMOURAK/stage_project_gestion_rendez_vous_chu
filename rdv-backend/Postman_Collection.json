{
  "info": {
    "name": "RDV Hospital API Tests",
    "description": "Collection pour tester l'API de gestion des rendez-vous hospitaliers",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:8080/api"
    }
  ],
  "item": [
    {
      "name": "Patients",
      "item": [
        {
          "name": "Créer un patient",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": "{{baseUrl}}/patients",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"nom\": \"Martin\",\n  \"prenom\": \"Marie\",\n  \"email\": \"marie.martin@email.com\",\n  \"numeroSecu\": \"9876543210987\",\n  \"dateNaissance\": \"1985-05-15\",\n  \"adresse\": \"456 Avenue des Fleurs, 75002 Paris\",\n  \"sexe\": \"FEMME\",\n  \"antecedents\": \"Allergie aux pénicillines\",\n  \"motDePasse\": \"password123\"\n}"
            }
          }
        },
        {
          "name": "Lister tous les patients",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/patients"
          }
        },
        {
          "name": "Récupérer un patient par ID",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/patients/1"
          }
        }
      ]
    },
    {
      "name": "Médecins",
      "item": [
        {
          "name": "Créer un médecin",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": "{{baseUrl}}/medecins",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"nom\": \"Dubois\",\n  \"prenom\": \"Dr. Pierre\",\n  \"email\": \"pierre.dubois@hopital.fr\",\n  \"numeroRPPS\": \"98765432109\",\n  \"specialite\": \"Dermatologie\",\n  \"description\": \"Spécialiste en dermatologie\",\n  \"motDePasse\": \"password123\"\n}"
            }
          }
        },
        {
          "name": "Lister tous les médecins",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/medecins"
          }
        }
      ]
    },
    {
      "name": "Rendez-vous",
